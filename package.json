{
  "name": "othello",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Nate Geslin <teamtomkins23@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run build:client && npm run build:scripts:server",
    "clean": "rm -rf ./dist && mkdir -p dist/public/ && mkdir -p dist/public/script/",
    "build:client": "yarn build:scripts:client && yarn build:styles",
    "build:styles": "cp -R ./src/public/style/ ./dist/public/style/",
    "build:scripts:client": "browserify -d src/public/script/app.ts -p [ tsify --noImplicitAny ] > dist/public/script/bundle.js",
    "build:scripts:server": "cp ./src/server.js ./dist/server.js && cp -r ./src/controllers/ ./dist/controllers",
    "start": "nodemon dist/server.js",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register -r jsdom-global/register src/**/*.spec.ts",
    "report": "nyc report --reporter=cobertura --reporter=lcov"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/coverage/**",
      "**/dist/**",
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "@types/sinon": "^2.3.7",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "chai-dom": "^1.5.0",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "sinon": "^4.0.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tsify": "^3.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "pug": "^2.0.0-rc.4",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  }
}
